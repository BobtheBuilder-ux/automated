# Environment variables for production deployment
# Copy this to .env and fill in your actual values

# Server Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=production

# CORS Configuration (add your frontend URL here)
ALLOWED_ORIGINS=https://your-frontend-domain.com,http://localhost:3000

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Email Configuration (if using SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=your_verified_sender_email@domain.com

# Firebase Configuration
FIREBASE_PROJECT_ID=automated-669ff
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-fbsvc@automated-669ff.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-fbsvc%40automated-669ff.iam.gserviceaccount.com

# Redis Configuration (if using external Redis)
REDIS_URL=redis://localhost:6379

# Job Discovery Configuration
AUTO_DISCOVERY_INTERVAL_HOURS=2

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=static/uploads

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# Email Configuration
EMAIL_SERVICE_API_KEY=your-email-api-key

# Job Scraping Configuration
SCRAPING_DELAY=2
MAX_RETRIES=3

# OpenAI/Gemini API Keys
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key

# Database URLs (if using external databases)
DATABASE_URL=your-database-url